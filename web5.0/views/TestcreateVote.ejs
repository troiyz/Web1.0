<html>

<head>
    <title>Dynamically add input field using jquery</title>
    <link rel="stylesheet" href="Style/css/styleForm.css" />
    <!-- <script src="../node_modules/web3/dist/web3.min.js"></script> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <h1> Create Vote </h1>
</head>

<body>
    <form action="/TestcreateVote" method="POST">
        <div class="container1">
            <div>
                <input type="text" name="nameCandidate">
                <br>
                <input type="text" name="nameCandidate">
                <button class="add_form_field">Add &nbsp;
                    <span style="font-size:16px; font-weight:bold;">+ </span>
                </button>
                <input type="submit" class="create_vote" value="submit" />
            </div>
        </div>
    </form>
</body>

<script>
    $(document).ready(function () {
        var wrapper = $(".container1");
        var add_button = $(".add_form_field");

        $(add_button).click(function (e) {
            e.preventDefault();
            $(wrapper).append('<div><input type="text" name="nameCandidate"/><a href="#" class="delete">Delete</a></div>'); //add input box
        });
        $(wrapper).on("click", ".delete", function (e) {
            e.preventDefault(); $(this).parent('div').remove();
        })
    });
</script>
